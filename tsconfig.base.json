{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "target": "esnext",
    "module": "esnext",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "lib": ["esnext"]
  },
  "exclude": ["node_modules", "out", "dist"]
}
